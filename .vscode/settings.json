{
    "editor.formatOnSave": true,
    "python.sortImports.args": [
        "--profile=black",
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=100"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "cSpell.words": [
        "csrftoken",
        "kunyomi",
        "onyomi"
    ],
}